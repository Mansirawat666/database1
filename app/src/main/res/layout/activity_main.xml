<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/e1"></EditText>

    <EditText
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/e2"
        android:layout_below="@+id/e1"></EditText>

    <EditText
        android:layout_width="300dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_height="50dp"
        android:layout_below="@+id/e2"
        android:id="@+id/e3"></EditText>

    <EditText
        android:layout_width="300dp"
        android:layout_marginLeft="40dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/e3"
        android:id="@+id/e4"></EditText>

    <EditText
        android:layout_width="300dp"
        android:layout_marginLeft="40dp"
        android:layout_height="50dp"
        android:layout_below="@+id/e4"
        android:layout_marginTop="30dp"
        android:id="@+id/e5"></EditText>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/e5"
        android:layout_marginTop="30dp"
        android:text="Register"
        android:layout_marginLeft="100dp"
        android:id="@+id/b1"></Button>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Show"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/b1"
        android:id="@+id/b2"></Button>



    <TextView
        android:layout_width="300dp"
        android:layout_marginLeft="40dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/b2"
        android:id="@+id/e6"
        android:text="login"
        ></TextView>
</RelativeLayout>